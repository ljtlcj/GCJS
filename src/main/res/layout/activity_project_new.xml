<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackGroup"
    android:orientation="vertical">

    <include layout="@layout/include_common_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="所属工程标段："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/et_item_one_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请选择工程标段"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_add_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:text="+"
                    android:textColor="@color/green"
                    android:textSize="30dp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="项目名称："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入项目名（必填）"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textSize="12sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="所属县区："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/tv_time"
                    android:background="@null"
                    android:hint="请输入区域(必填)"
                    android:inputType="none"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textSize="12sp" />

            </RelativeLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="项目地址："
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_check_man"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入项目地址（可选）"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="难度系数："
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/star"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/yellow"
                    android:rating="2.5"
                    android:stepSize="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="审核部门：市场部"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="项目概况:"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/et_check_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/tv_one"
                    android:background="@drawable/common_bd_gray"
                    android:gravity="top"
                    android:hint=""
                    android:lines="5"
                    android:padding="12dp"
                    android:textSize="12sp" />

            </RelativeLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="项目资料："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_folder_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_bg_blue_radius"
                    android:padding="4dp"
                    android:text="选取文件上传"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="仅支zip或rar格式"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_show_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="90dp"
                    android:text="未选择文件"
                    android:textColor="@color/red" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="+添加项目工单"
                android:textColor="@color/green"
                android:textSize="16dp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/green"
                android:text="提交审核"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>