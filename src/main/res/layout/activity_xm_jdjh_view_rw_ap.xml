<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">
    <include layout="@layout/app_title"/>
    <ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
    	android:background="#FAFAFA">
    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
            android:paddingBottom="10dp">
            <LinearLayout
                android:id="@id/widget_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/itembg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务负责人："
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_gravity="top"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="3dp"
                    android:text="-"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全员："
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_gravity="top"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="3dp"
                    android:text="-"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="质量员："
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_gravity="top"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="3dp"
                    android:text="-"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@id/widget_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/itembg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意事项（必填）"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_gravity="top"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbg"
                    android:gravity="top|left"
                    android:hint="请输入注意事项"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:padding="10dp"
                    android:minLines="5"
                    android:textColor="#000000"
                    android:textColorHint="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:id="@id/widget_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/itembg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="施工指导文件："
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="选择文件上传"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btnbg_blue" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="仅支持zip或rar格式"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@id/widget_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="确认安排"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btnbg_blue" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>